{
  "name": "iobroker.kostal-piko-mp-plus",
  "version": "0.0.4",
  "description": "Integrate your Kostal PIKO MP plus into ioBroker",
  "author": {
    "name": "Doggi",
    "email": "soeren707@freenet.de"
  },
  "homepage": "https://github.com/Doggi/ioBroker.kostal-piko-mp-plus",
  "license": "MIT",
  "keywords": [
    "kostal",
    "piko",
    "mp",
    "plus",
    "iobroker",
    "pv"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Doggi/ioBroker.kostal-piko-mp-plus.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.6.0",
    "axios": "^0.27.2",
    "xmldom": "^0.6.0",
    "xpath": "^0.0.32"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.2",
    "@iobroker/adapter-dev": "^1.0.0",
    "@iobroker/adapter-react": "2.1.0",
    "@iobroker/testing": "^2.6.0",
    "@material-ui/core": "^4.12.4",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.16",
    "@types/proxyquire": "^1.3.28",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^18.0.3",
    "@types/sinon": "^10.0.12",
    "@types/sinon-chai": "^3.2.8",
    "@types/xmldom": "^0.1.31",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.29.4",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "proxyquire": "^2.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.8.1",
    "typescript": "~4.7.4"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build admin/build",
    "build": "build-adapter all",
    "watch": "build-adapter all --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "prebuild:react": "rimraf admin/build",
    "build:react": "build-adapter react",
    "watch:react": "build-adapter react --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint --ext .ts,.tsx src/",
    "translate": "translate-adapter",
    "release": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/Doggi/ioBroker.kostal-piko-mp-plus/issues"
  },
  "readmeFilename": "README.md"
}